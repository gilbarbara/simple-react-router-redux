{
  "name": "simple-react-router-redux",
  "version": "0.2.3",
  "description": "Tiny redux bindings for react-router",
  "author": "Gil Barbara <gilbarbara@gmail.com>",
  "keywords": [
    "react",
    "react-router",
    "redux"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/gilbarbara/simple-react-router-redux.git"
  },
  "bugs": {
    "url": "https://github.com/gilbarbara/simple-react-router-redux/issues"
  },
  "homepage": "https://github.com/gilbarbara/simple-react-router-redux#readme",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "files": [
    "esm",
    "lib",
    "src"
  ],
  "types": "lib/index.d.ts",
  "peerDependencies": {
    "react": "^16.0.0",
    "history": "^4.9.0",
    "react-redux": "^6.0.0 || ^7.0.0",
    "react-router-dom": "^4.0.0 || ^5.0.0",
    "redux": "^4.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@gilbarbara/tsconfig": "^0.1.0",
    "@size-limit/preset-small-lib": "^4.6.0",
    "@types/enzyme": "^3.10.7",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/exenv": "^1.2.0",
    "@types/fetch-mock": "^7.3.3",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.10",
    "@types/node-fetch": "^2.5.7",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.9",
    "@types/react-router-dom": "^5.1.6",
    "@types/redux": "^3.6.31",
    "@types/redux-mock-store": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "cross-env": "^7.0.2",
    "del-cli": "^3.0.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "eslint": "^7.11.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.4",
    "history": "^4.10.1",
    "husky": "^4.3.0",
    "jest": "^26.5.3",
    "jest-chain": "^1.1.5",
    "jest-enzyme": "^7.1.2",
    "jest-extended": "^0.11.5",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.4.1",
    "prettier": "^2.1.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-redux": "^7.2.1",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "redux-mock-store": "^1.5.4",
    "repo-tools": "^0.2.0",
    "size-limit": "^4.6.0",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  },
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc",
    "build:esm": "tsc -m es6 --outDir esm",
    "clean": "del lib/* && del esm/*",
    "watch:cjs": "npm run build:cjs -- -w",
    "watch:esm": "npm run build:esm -- -w",
    "lint": "eslint src test",
    "test": "jest",
    "test:coverage": "jest --coverage --bail",
    "test:watch": "jest --watch --verbose",
    "format": "prettier \"**/*.{js,jsx,json,yml,yaml,css,less,scss,ts,tsx,md,graphql,mdx}\" --write",
    "validate": "npm run lint && npm run test:coverage && npm run build && npm run size",
    "size": "size-limit",
    "prepublishOnly": "npm run validate"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "avoid",
    "printWidth": 100,
    "proseWrap": "never"
  },
  "lint-staged": {
    "*.js?(x)": [
      "eslint --fix src test",
      "jest --bail --findRelatedTests"
    ],
    "*.(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql|mdx)": [
      "prettier --write",
      "git add"
    ]
  },
  "size-limit": [
    {
      "path": "./esm/index.js",
      "limit": "2 kB"
    },
    {
      "path": "./lib/index.js",
      "limit": "2 kB"
    }
  ],
  "husky": {
    "hooks": {
      "post-merge": "repo-tools install-packages",
      "pre-commit": "repo-tools check-remote && lint-staged"
    }
  }
}
